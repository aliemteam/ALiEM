.home,
.archive
    .post
        margin-bottom: 20px
        background: white
        padding: 20px 20px 0 20px
        border-radius: 2px
        box-shadow: $shadow-2dp
        .fusion-meta-info
            display: none

// Remove date stamps from beside posts
.fusion-date-and-formats
    display: none
.fusion-post-content.post-content
    margin-left: 0

// Fix duplicate read more tags
.fusion-post-content-container p:last-of-type
    margin-bottom: 0

// Pagination buttons
.pagination, .page-links, .woocommerce-pagination, .bbp-pagination .bbp-pagination-links
    margin: 0 !important

// Fix distorted content / images on mobile
@media (max-width: 800px)
    .home .post img
        display: block
        float: none
        margin: auto auto 20px auto
